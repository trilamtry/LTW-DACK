<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Admin Shop Thời Trang</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/assets/css/admin-style.css">
</head>
<body>
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="index.html">
                <i class="bi bi-shop me-2"></i>
                Shop Thời Trang - Admin
            </a>

            <div class="ms-auto">
                <div class="dropdown">
                    <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-2"></i>
                        Admin User
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Cài đặt</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="p-3">
                <nav class="nav flex-column">
                    <a href="@Url.Action("Index", "Admin", new { area = "Admin" })" class="nav-link active">
                        <i class="bi bi-speedometer2 me-2"></i>
                        Dashboard
                    </a>
                    <a href="@Url.Action("Index", "Product", new {area = "Admin"})" class="nav-link">
                        <i class="bi bi-box-seam me-2"></i>
                        Quản lý Sản phẩm
                    </a>
                    <a href="@Url.Action("Index", "Order", new {area = "Admin"})" class="nav-link">
                        <i class="bi bi-cart-check me-2"></i>
                        Quản lý Đơn hàng
                    </a>
                    <a href="@Url.Action("Index", "AppUser", new {area = "Admin"})" class="nav-link">
                        <i class="bi bi-people me-2"></i>
                        Quản lý Khách hàng
                    </a>
                    <a href="@Url.Action("Index", "ProductReview", new {area = "Admin"})" class="nav-link">
                        <i class="bi bi-star me-2"></i>
                        Quản lý Đánh giá
                    </a>
                    <a href="@Url.Action("Index", "Category", new {area = "Admin"})" class="nav-link">
                        <i class="bi bi-folder me-2"></i>
                        Quản lý Danh mục
                    </a>
                    <a href="@Url.Action("Index", "Size", new {area = "Admin"})" class="nav-link">
                        <i class="bi bi-rulers me-2"></i>
                        Quản lý Size
                    </a>
                    <a href="@Url.Action("Index", "Color", new {area = "Admin"})" class="nav-link">
                        <i class="bi bi-palette me-2"></i>
                        Quản lý Màu sắc
                    </a>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>