@model FashionStore.Models.AppUser
@{
    ViewBag.Title = "Thông tin khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var cultureInfo = new System.Globalization.CultureInfo("vi-VN");
}

<div class="main-content flex-grow-1 p-3 p-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Hồ sơ khách hàng</h1>
        <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-white">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin cá nhân</h6>
                </div>
                <div class="card-body text-center">
                    <div class="mb-3">
                        <div class="rounded-circle bg-secondary text-white d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px; font-size: 30px;">
                            @Model.FullName.Substring(0, 1).ToUpper()
                        </div>
                    </div>
                    <h5 class="fw-bold">@Model.FullName</h5>
                    <p class="text-muted">@Model.Email</p>

                    <hr>
                    <div class="text-start">
                        <p><strong><i class="bi bi-telephone me-2"></i>SĐT:</strong> @(string.IsNullOrEmpty(Model.Phone) ? "Chưa cập nhật" : Model.Phone)</p>
                        <p><strong><i class="bi bi-calendar me-2"></i>Ngày tham gia:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                        <p>
                            <strong><i class="bi bi-shield-check me-2"></i>Trạng thái:</strong>
                            @(Model.IsActive ? "Hoạt động" : "Đã khóa")
                        </p>
                    </div>
                </div>
            </div>

            @if (Model.CustomerAddresses != null && Model.CustomerAddresses.Any())
            {
                <div class="card shadow mb-4">
                    <div class="card-header bg-white">
                        <h6 class="m-0 font-weight-bold text-primary">Sổ địa chỉ</h6>
                    </div>
                    <div class="card-body">
                        @foreach (var addr in Model.CustomerAddresses)
                        {
                            <div class="border-bottom mb-2 pb-2">
                                <p class="mb-1">@addr.Line1</p>
                                <small class="text-muted">@addr.Ward, @addr.District, @addr.Province</small>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Lịch sử đơn hàng (@Model.Orders.Count)</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Ngày đặt</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Orders != null && Model.Orders.Any())
                                {
                                    foreach (var order in Model.Orders.OrderByDescending(o => o.CreatedAt))
                                    {
                                        <tr>
                                            <td><a href="@Url.Action("Details", "Order", new { id = order.OrderId })">@order.OrderCode</a></td>
                                            <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td class="fw-bold">@order.TotalAmount.ToString("N0", cultureInfo) đ</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case "PENDING":<span class="badge bg-warning text-dark">Chờ xử lý</span>; break;
                                                    case "SHIPPING": <span class="badge bg-info">Đang giao</span>; break;
                                                    case "COMPLETED": <span class="badge bg-success">Hoàn thành</span>; break;
                                                    case "CANCELLED": <span class="badge bg-danger">Đã hủy</span>; break;
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Order", new { id = order.OrderId })" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">Khách hàng này chưa có đơn hàng nào.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>