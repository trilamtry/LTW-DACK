@model IEnumerable<FashionStore.Models.AppUser>
@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content flex-grow-1 p-3 p-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý Khách hàng</h1>

        @using (Html.BeginForm("Index", "AppUser", FormMethod.Get, new { @class = "d-flex" }))
        {
            <input type="text" name="search" class="form-control me-2" placeholder="Tìm Email, SĐT..." />
            <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i></button>
        }
    </div>

    <div class="card shadow mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày tham gia</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.FullName</td>
                                <td>@item.Email</td>
                                <td>@(string.IsNullOrEmpty(item.Phone) ? "---" : item.Phone)</td>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Đã khóa</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Details", new { id = item.AppUserId })" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @using (Html.BeginForm("ToggleStatus", "AppUser", new { id = item.AppUserId }, FormMethod.Post, new { onsubmit = "return confirm('Bạn có chắc muốn thay đổi trạng thái tài khoản này?');" }))
                                        {
                                            @Html.AntiForgeryToken()
                                            if (item.IsActive)
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-warning" title="Khóa tài khoản">
                                                    <i class="bi bi-lock"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Mở khóa">
                                                    <i class="bi bi-unlock"></i>
                                                </button>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>