@model FashionStore.Areas.Admin.Models.AdminDashboardViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Dashboard - Tổng Quan";
    var cultureInfo = new System.Globalization.CultureInfo("vi-VN");
}

<div class="main-content flex-grow-1 p-3 p-md-4">
    <h1 class="mb-4">
        <i class="bi bi-speedometer2 me-2"></i>Dashboard - Tổng Quan
    </h1>

    <div class="row g-4 mb-5">

        <div class="col-lg-3 col-sm-6">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small text-uppercase">Tổng đơn hàng</p>
                            <h4 class="mb-0 fw-bold">@Model.TotalOrders.ToString("N0")</h4>
                            <small class="text-secondary">Đã xử lý</small>
                        </div>
                        <div class="stat-icon p-2 rounded-circle bg-primary bg-opacity-10">
                            <i class="bi bi-cart-check-fill text-primary display-6"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-sm-6">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small text-uppercase">Doanh thu (30 ngày)</p>
                            <h4 class="mb-0 fw-bold">
                                @Model.TotalRevenueLast30Days.ToString("N0", cultureInfo) đ
                            </h4>
                            <small class="text-success">Thành công</small>
                        </div>
                        <div class="stat-icon p-2 rounded-circle bg-success bg-opacity-10">
                            <i class="bi bi-currency-dollar text-success display-6"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-sm-6">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small text-uppercase">Tổng sản phẩm</p>
                            <h4 class="mb-0 fw-bold">@Model.TotalProducts.ToString("N0")</h4>
                            <small class="text-info">Đang kinh doanh</small>
                        </div>
                        <div class="stat-icon p-2 rounded-circle bg-info bg-opacity-10">
                            <i class="bi bi-box-seam-fill text-info display-6"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-sm-6">
            <div class="card stat-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 small text-uppercase">Khách hàng</p>
                            <h4 class="mb-0 fw-bold">@Model.TotalCustomers.ToString("N0")</h4>
                            <small class="text-secondary">Thành viên</small>
                        </div>
                        <div class="stat-icon p-2 rounded-circle bg-warning bg-opacity-10">
                            <i class="bi bi-people-fill text-warning display-6"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-list-task me-2"></i>Đơn hàng mới nhất</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Khách hàng</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày đặt</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentOrders != null && Model.RecentOrders.Any())
                                {
                                    foreach (var item in Model.RecentOrders)
                                    {
                                        string badgeClass = "";
                                        string statusText = "";

                                        // Sử dụng thuộc tính Status của Model Order
                                        switch (item.Status)
                                        {
                                            case "COMPLETED":
                                                badgeClass = "bg-success";
                                                statusText = "Hoàn thành";
                                                break;
                                            case "PENDING":
                                                badgeClass = "bg-warning";
                                                statusText = "Chờ xử lý";
                                                break;
                                            case "SHIPPING":
                                                badgeClass = "bg-info";
                                                statusText = "Đang giao";
                                                break;
                                            case "CANCELLED":
                                                badgeClass = "bg-danger";
                                                statusText = "Đã hủy";
                                                break;
                                            default:
                                                badgeClass = "bg-secondary";
                                                statusText = item.Status;
                                                break;
                                        }

                                        <tr>
                                            <td><strong>@item.OrderCode</strong></td>
                                            <td>@item.CustomerName</td>
                                            <td>@item.TotalAmount.ToString("N0", cultureInfo) đ</td>
                                            <td><span class="badge @badgeClass">@statusText</span></td>
                                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                            <td><a href="@Url.Action("Details", "Order", new { id = item.OrderId, area = "Admin" })" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i></a></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">Không có đơn hàng nào gần đây.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-end bg-white">
                    <a href="@Url.Action("Index", "Order", new { area = "Admin" })" class="btn btn-sm btn-outline-secondary">Xem tất cả đơn hàng <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-bell me-2"></i>Cảnh báo hàng sắp hết</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @if (Model.LowStockVariants != null && Model.LowStockVariants.Any())
                        {
                            foreach (var variant in Model.LowStockVariants)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="mb-1 fw-bold">@variant.Product.ProductName</p>
                                        <small class="text-muted">
                                            Size: @variant.Size.SizeCode - Màu: @variant.Color.ColorName
                                        </small>
                                    </div>
                                    <span class="badge bg-danger rounded-pill" title="Tồn kho">@variant.Stock</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-success m-0">Tuyệt vời! Tất cả sản phẩm đều đủ tồn kho (> 10).</div>
                        }
                    </div>
                    <a href="@Url.Action("Index", "Product", new { area = "Admin" })" class="btn btn-sm btn-primary mt-3 w-100">Quản lý Sản phẩm</a>
                </div>
            </div>
        </div>
    </div>
</div>