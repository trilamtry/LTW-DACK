@model IEnumerable<FashionStore.Models.Size>

@{
    ViewBag.Title = "Quản lý Size";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content flex-grow-1 p-3 p-md-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Quản lý Kích thước (Size)</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Thêm Size
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tên Size</th>
                            <th>Thứ tự hiển thị</th>
                            @* ĐÃ XÓA CỘT TRẠNG THÁI (IsActive) *@
                            <th class="text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@item.SizeCode</td>
                                <td>@item.SortOrder</td>
                                @* ĐÃ XÓA LOGIC HIỂN THỊ ISACTIVE *@
                                <td class="text-end pe-4">
                                    <a href="@Url.Action("Edit", new { id = item.SizeId })" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil-square"></i> Sửa
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.SizeId })" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>