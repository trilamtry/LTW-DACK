@model FashionStore.Models.Category

@{
    ViewBag.Title = "Sửa Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content flex-grow-1 p-3 p-md-4">
    <div class="card shadow-sm border-0 col-md-8 mx-auto">
        <div class="card-header bg-white">
            <h5 class="mb-0">Chỉnh sửa Danh mục</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.CategoryId)

                <div class="mb-3">
                    <label class="form-label">Thuộc Nhóm</label>
                    @Html.DropDownList("GroupId", null, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.GroupId, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Tên Danh mục</label>
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Slug (URL)</label>
                    @Html.EditorFor(model => model.CategorySlug, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategorySlug, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Thứ tự hiển thị</label>
                        @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                    </div>
                    <div class="col-md-6 mb-3 d-flex align-items-end">
                        <div class="form-check">
                            @Html.EditorFor(model => model.IsActive)
                            <label class="form-check-label" for="IsActive">Đang hoạt động</label>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-warning">Cập nhật</button>
                    <a href="@Url.Action("Index")" class="btn btn-light">Hủy bỏ</a>
                </div>
            }
        </div>
    </div>
</div>