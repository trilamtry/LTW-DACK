@model FashionStore.Models.Color

@{
    ViewBag.Title = "Thêm Màu sắc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-content flex-grow-1 p-3 p-md-4">
    <div class="card col-md-6 mx-auto shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Thêm mới Màu sắc</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Tên Màu</label>
                    @Html.EditorFor(model => model.ColorName, new { htmlAttributes = new { @class = "form-control", placeholder = "Ví dụ: Đỏ, Xanh Dương" } })
                    @Html.ValidationMessageFor(model => model.ColorName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    <label class="form-label">Mã Hex</label>
                    @Html.EditorFor(model => model.ColorHex, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Ví dụ: #FF0000" } })
                    @Html.ValidationMessageFor(model => model.ColorHex, "", new { @class = "text-danger" })
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Lưu lại</button>
                    <a href="@Url.Action("Index")" class="btn btn-light">Hủy bỏ</a>
                </div>
            }
        </div>
    </div>
</div>