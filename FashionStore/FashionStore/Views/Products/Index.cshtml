@model IEnumerable<FashionStore.Models.ProductListItemViewModel>

<div class="container mt-4">
    <h3 class="text-center text-uppercase mb-4">Sản Phẩm Mới Nhất</h3>
    <div class="row">
        @foreach (var item in Model)
        {
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="product-card">
            <div class="product-img-container" style="background-color: #f8f8f8;">
                <a href="@Url.Action("Details", "Products", new { id = item.ProductId })">
                    @* Sử dụng Url.Content để trỏ thẳng vào thư mục /product/
                    Lưu ý: "product" trong code phải viết thường y hệt tên folder của bạn
                    *@
                    <img src="@Url.Content("~/product/" + item.ImageUrl)"
                         class="img-fluid"
                         alt="@item.ProductName"
                         onerror="this.src='@Url.Content("~/product/product-1.jpg")';">
                    @* onerror: Nếu ảnh lỗi sẽ lấy ảnh product-1.jpg làm dự phòng *@
                </a>
            </div>
            <div class="product-info text-center mt-2">
                <h6 class="product-name" style="font-size: 14px; min-height: 40px;">@item.ProductName</h6>
                <p class="product-price text-danger font-weight-bold">@item.BasePrice.ToString("N0") đ</p>
            </div>
        </div>
    </div>}
    </div>
</div>

<style>
    .product-card {
        transition: all 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

    .product-img-container {
        overflow: hidden;
        background: #f8f9fa;
    }

    .product-name {
        font-size: 14px;
        font-weight: 500;
        color: #333;
        height: 40px;
    }

    .product-price {
        font-weight: bold;
    }
</style>