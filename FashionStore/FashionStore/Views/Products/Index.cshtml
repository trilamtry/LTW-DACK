@model IEnumerable<FashionStore.Models.ProductListItemViewModel>

<div class="container mt-4">
    <h3 class="text-center text-uppercase mb-4">Sản Phẩm Mới Nhất</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="product-card">
                    <div class="product-img-container">
                        <a href="/san-pham/@item.Slug">
                            <img src="~/Content/Images/Products/@item.ImageUrl" class="img-fluid" alt="@item.ProductName">
                        </a>
                    </div>
                    <div class="product-info text-center mt-2">
                        <h6 class="product-name">@item.ProductName</h6>
                        <p class="product-price text-danger">@item.BasePrice.ToString("N0") đ</p>
                    </div>
                </div>
            </div>  
        }
    </div>
</div>

<style>
    .product-card {
        transition: all 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
        }

    .product-img-container {
        overflow: hidden;
        background: #f8f9fa;
    }

    .product-name {
        font-size: 14px;
        font-weight: 500;
        color: #333;
        height: 40px;
    }

    .product-price {
        font-weight: bold;
    }
</style>