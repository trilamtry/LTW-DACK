@using System.Web.Mvc.Html
@model IEnumerable<FashionStore.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card mb-4 border-0 shadow-sm" style="background: #f8f9fa; border-radius: 0;">
        <div class="card-body">
            @using (Html.BeginForm("Index", "Products", FormMethod.Get, new { @class = "form-row align-items-end" }))
            {
                <div class="col-md-3 mb-2">
                    <label class="small font-weight-bold text-uppercase">Tên sản phẩm</label>
                    <input type="text" name="search" class="form-control" placeholder="Tìm kiếm..." value="@Request.QueryString["search"]" />
                </div>

                <div class="col-md-2 mb-2">
                    <label class="small font-weight-bold text-uppercase">Danh mục</label>
                    @Html.DropDownList("catId", (SelectList)ViewBag.catId, "-- Tất cả --", new { @class = "form-control" })
                </div>

                <div class="col-md-2 mb-2">
                    <label class="small font-weight-bold text-uppercase">Giá từ</label>
                    <input type="number" name="minPrice" class="form-control" value="@Request.QueryString["minPrice"]" />
                </div>

                <div class="col-md-2 mb-2">
                    <label class="small font-weight-bold text-uppercase">Đến giá</label>
                    <input type="number" name="maxPrice" class="form-control" value="@Request.QueryString["maxPrice"]" />
                </div>

                <div class="col-md-3 mb-2">
                    <button type="submit" class="btn btn-dark btn-block text-uppercase font-weight-bold" style="height: 38px; border-radius: 0;">
                        Lọc kết quả
                    </button>
                </div>
            }
        </div>
    </div>

    <div class="row">
        @if (Model == null || !Model.Any())
        {
            <div class="col-12 text-center py-5">
                <p class="text-muted">Không tìm thấy sản phẩm nào.</p>
                <a href="@Url.Action("Index")" class="btn btn-outline-dark btn-sm">Xem tất cả</a>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6 mb-4">
                    <div class="product-card">
                        <div class="product-img-container">
                            <a href="@Url.Action("Details", "Products", new { id = item.ProductId })">
                                @{
                                    // LOGIC LẤY ẢNH TỪ DATABASE ShopThoiTrang
                                    string fileName = "product-1.jpg"; // Ảnh mặc định nếu DB trống

                                    // Kiểm tra bảng ProductImages (liên kết 1-n với Product)
                                    if (item.ProductImages != null && item.ProductImages.Any())
                                    {
                                        // Ưu tiên lấy ảnh có IsPrimary = true
                                        var primaryImg = item.ProductImages.FirstOrDefault(img => img.IsPrimary == true);
                                        if (primaryImg != null)
                                        {
                                            fileName = primaryImg.ImageUrl;
                                        }
                                        else
                                        {
                                            // Nếu không có ảnh primary, lấy ảnh đầu tiên trong danh sách
                                            fileName = item.ProductImages.FirstOrDefault().ImageUrl;
                                        }
                                    }
                                }
                                <img src="@Url.Content("~/img/product/" + fileName)"
                                     class="img-fluid main-img"
                                     alt="@item.ProductName"
                                     onerror="this.src='@Url.Content("~/img/product/product-1.jpg")';">
                            </a>
                        </div>

                        <div class="product-info text-center mt-3">
                            <h6 class="product-title text-uppercase mb-1">
                                <a href="@Url.Action("Details", "Products", new { id = item.ProductId })" class="text-dark text-decoration-none">
                                    @item.ProductName
                                </a>
                            </h6>
                            @* Dùng BasePrice từ bảng Product *@
                            <p class="text-danger font-weight-bold">@item.BasePrice.ToString("N0") đ</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .product-img-container {
        background-color: #f3f3f3;
        height: 350px; /* Điều chỉnh chiều cao khung ảnh cho phù hợp */
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .main-img {
        transition: all 0.5s ease;
        max-height: 100%;
        width: 100%;
        object-fit: cover; /* Giúp ảnh không bị méo, lấp đầy khung */
    }

    .product-card:hover .main-img {
        transform: scale(1.08);
    }

    .product-title {
        font-size: 14px;
        font-weight: 600;
        height: 40px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .form-control {
        border-radius: 0;
        font-size: 14px;
    }
</style>